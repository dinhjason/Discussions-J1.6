<?xml version="1.0" encoding="utf-8"?> 
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/module-install.dtd"> 
<install version="1.5" type="module" client="site">

	<name>Discussions RecentX</name> 
	<creationDate>August 2010</creationDate> 
	<author>Codingfish (Achim Fischer)</author> 
	<authorEmail>info@codingfish.com</authorEmail> 
	<authorUrl>http://www.codingfish.com</authorUrl>
	<copyright>All rights reserved.</copyright> 
	<license>GPL 2</license> 
	<version>1.4</version> 
	<description>Module for Codingfish Discussions. Displays recent X forum postings</description> 

	<files>
		<filename module="mod_discussions_recentx">mod_discussions_recentx.php</filename>
	</files> 
	
	<params>	
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param name="number" type="text" default="5" label="# of entries to show" description="How many entries do you want to show in the recent x box?" />
		<param name="length" type="text" default="25" label="Length of entry" description="How many characters should the short title have?" />
		<param name="more" type="text" default=">" label="More character(s)" description="The character(s) to show that there is more" />

		<param name="replies" type="text" default="Replies" label="Reply text" description="Enter your 'Replies' text" />
		<param name="topic"   type="text" default="Topic"   label="Topic text" description="Enter your 'Topic' text" />


        <param name="show_history" type="radio" label="show history" default="1" description="Show history?">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="history" type="text" default="History"  label="History text" description="Enter your 'History' text" />
        <param name="hours" type="text" default="h"  label="Hours text" description="Enter your 'Hours' text" />


		<param name="show_poweredby" type="radio" label="show powered by" default="1" description="Show powered by Discussions?">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>				
	</params>	
	
</install>