<?xml version="1.0" encoding="utf-8"?> 
<extension version="1.6" type="module" client="site" method="upgrade">
		
	<name>Discussions RecentX</name> 
	<creationDate>February 2011</creationDate> 
	<author>Codingfish (Achim Fischer)</author> 
	<authorEmail>info@codingfish.com</authorEmail> 
	<authorUrl>http://www.codingfish.com</authorUrl>
	<copyright>All rights reserved.</copyright> 
	<license>GPL 2</license> 
	<version>1.4</version> 
	<description>Module for Codingfish Discussions. Displays recent X forum postings</description> 

	<files>
		<filename module="mod_discussions_recentx">mod_discussions_recentx.php</filename>
		<filename>index.html</filename>
	</files> 
	
	<config>
		
		<fields name="params">	

			<fieldset name="basic">
			
				<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
				<field name="number" type="text" default="5" label="# of entries to show" description="How many entries do you want to show in the recent x box?" />
				<field name="length" type="text" default="25" label="Length of entry" description="How many characters should the short title have?" />
				<field name="more" type="text" default=">" label="More character(s)" description="The character(s) to show that there is more" />

				<field name="replies" type="text" default="Replies" label="Reply text" description="Enter your 'Replies' text" />
				<field name="topic"   type="text" default="Topic"   label="Topic text" description="Enter your 'Topic' text" />


		        <field name="show_history" type="radio" label="Show history" default="1" description="Show history?">
		            <option value="1">Yes</option>
		            <option value="0">No</option>
		        </field>
		        <field name="history" type="text" default="History"  label="History text" description="Enter your 'History' text" />
		        <field name="hours" type="text" default="h"  label="Hours text" description="Enter your 'Hours' text" />


				<field name="show_poweredby" type="radio" label="Show powered by" default="1" description="Show powered by Discussions?">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>		
					
			</fieldset>
						
		</fields>	
		
	</config>
	
</extension>
