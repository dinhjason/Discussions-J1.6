<?xml version="1.0" encoding="utf-8"?> 
<extension version="1.6" type="module" client="site" method="upgrade">

	<name>Discussions Onliners</name> 
	<creationDate>April 2011</creationDate> 
	<author>Codingfish (Achim Fischer)</author> 
	<authorEmail>info@codingfish.com</authorEmail> 
	<authorUrl>http://www.codingfish.com</authorUrl>
	<copyright>All rights reserved.</copyright> 
	<license>GPL 2</license> 
	<version>1.1</version> 
	<description>Module for Codingfish Discussions. Shows current online users and displays Discussions avatars</description> 

    
	<files>
		<filename module="mod_discussions_onliners">mod_discussions_onliners.php</filename>
        <filename>index.html</filename>
	</files>
        

    <config>
        <fields name="params">
            <fieldset name="basic">
		        <field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		        <field name="number" type="text" default="" label="max # of onliners to show" description="How many online users do you want to show? Leave blank for all." />
		        <field name="show_poweredby" type="radio" label="show powered by" default="1" description="Show powered by Discussions?">
			        <option value="1">Yes</option>
			        <option value="0">No</option>
		        </field>
            </fieldset>
        </fields>
    </config>

</extension>