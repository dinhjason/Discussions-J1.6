<?xml version="1.0" encoding="utf-8"?>
<config>

	<params>

		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="@spacer" type="" default="" label="General Settings" description="" menu="hide" />

	
		<param name="rookie" type="list" default="0" label="Rookie Mode" description="Sets 'Rookie Mode' for this user. First x posts have to be approved by a moderator">
			<option value="0">disabled</option>
			<option value="1">1 post</option>
			<option value="2">2 posts</option>
			<option value="3">3 posts</option>
			<option value="4">4 posts</option>
			<option value="5">5 posts</option>
			<option value="6">6 posts</option>
			<option value="7">7 posts</option>
			<option value="8">8 posts</option>
			<option value="9">9 posts</option>
			<option value="10">10 posts</option>
		</param>

    	<param name="editTime" type="text" default="30" label="Edit Time" description="Time in minutes the user can edit own forum post" />

		<param name="delete" type="list" default="0" label="Delete Mode" description="Sets 'Delete Mode' for the Discussions plugin.">
			<option value="0">disabled</option>
			<option value="1">Raw</option>
			<option value="2">Soft</option>
		</param>

    	<param name="deleteUser" type="text" default="0" label="Deleted Posts Userid" description="If delete mode is 'Soft', posts of deleted user will be set to this userid" />


		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="@spacer" type="" default="" label="Social Buttons" description="" menu="hide" />


    	<param name="shareCode" type="textarea" default="" label="Share Code" description="Your HTML code to integrate 'Add This' or 'Share This' " rows="8" cols="50" />

    	<param name="tweetmemeCode" type="textarea" default="" label="Tweetmeme Code" description="Your HTML code to integrate 'Tweetmeme'" rows="8" cols="50" />
    	<param name="facebookCode"  type="textarea" default="" label="Facebook Code"  description="Your HTML code to integrate 'Facebook'"  rows="8" cols="50" />

		

		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="@spacer" type="" default="" label="Email Settings" description="" menu="hide" />

		
    	<param name="emailSitename" type="text" default="YOURWEBSITE" label="Sitename" description="Email Sitename" />
		
    	<param name="emailFrom" type="text" default="noreply@YOURWEBSITE.com" label="From" description="Email From" />
		
    	<param name="emailSender" type="text" default="YOURWEBSITE.com" label="Sender" description="Email Sender" />

    	<param name="emailLink" type="text" default="http://www.YOURWEBSITE.com/forums" label="Link" description="Email Link" />

		
		
		
    	<param name="emailWFMSubject" type="text" default="[YOURWEBSITE] Forum Notification" label="WFM Subject" description="Subject for Email to Moderators if Threads waiting for moderation" />


    	<param name="emailWFMMsg" type="textarea" 
    		default="one ore more posts in the forum need your approval.\n\nPlease approve at\n\nhttp://www.YOURWEBSITE.com/forums\n\n\nThank you\n\nYOURWEBSITE\n\n" 
			label="WFM Message" description="Email to Moderators if threads waiting for moderation: Msg Text" rows="5" cols="50" />
		
		
				
		
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="@spacer" type="" default="" label="HTML Boxes" description="" menu="hide" />


    	<param name="htmlBoxIndexTop" type="textarea" default="" label="Index Top" description="Your HTML code e.g. for advertising " rows="8" cols="50" />
    	<param name="htmlBoxIndexBottom" type="textarea" default="" label="Index Bottom" description="Your HTML code e.g. for advertising " rows="8" cols="50" />

    	<param name="htmlBoxCategoryTop" type="textarea" default="" label="Category Top" description="Your HTML code e.g. for advertising " rows="8" cols="50" />
    	<param name="htmlBoxCategoryBottom" type="textarea" default="" label="Category Bottom" description="Your HTML code e.g. for advertising " rows="8" cols="50" />
						
    	<param name="htmlBoxThreadTop" type="textarea" default="" label="Thread Top" description="Your HTML code e.g. for advertising " rows="8" cols="50" />
    	<param name="htmlBoxThreadBottom" type="textarea" default="" label="Thread Bottom" description="Your HTML code e.g. for advertising " rows="8" cols="50" />

    	<param name="htmlBoxProfileTop" type="textarea" default="" label="Profile Top" description="Your HTML code e.g. for advertising " rows="8" cols="50" />
    	<param name="htmlBoxProfileBottom" type="textarea" default="" label="Profile Bottom" description="Your HTML code e.g. for advertising " rows="8" cols="50" />

    	<param name="htmlBoxPostingTop" type="textarea" default="" label="Posting Top" description="Your HTML code e.g. for advertising " rows="8" cols="50" />
    	<param name="htmlBoxPostingBottom" type="textarea" default="" label="Posting Bottom" description="Your HTML code e.g. for advertising " rows="8" cols="50" />
		
		
	</params>
	
</config>
